---
- name: Install Elasticsearch
  hosts: elasticsearch
  handlers:
    - name: restart Elasticsearch
      become: true
      service:
        name: elasticsearch
        state: restarted
  tasks:
    - name: "Download Elasticsearch's deb"
      get_url:
        url: "https://artifacts.elastic.co/downloads/elasticsearch/elasticsearch-{{ elk_stack_version }}-amd64.deb"
        dest: "/tmp/elasticsearch-{{ elk_stack_version }}-amd64.deb"
      register: download_elastic
      until: download_elastic is succeeded
    - name: Install Elasticsearch
      become: true
      apt:
        deb: "/tmp/elasticsearch-{{ elk_stack_version }}-amd64.deb"
        state: present
    - name: Configure Elasticsearch
      become: true
      template:
        src: elasticsearch.yml.j2
        dest: /etc/elasticsearch/elasticsearch.yml
        mode: '0755'
      notify: restart Elasticsearch
- name: Install Kibana
  hosts: kbn
  handlers:
x    - name: restart Kibana
      become: true
      service:
        name: kibana
        state: restarted
  tasks:
    - name: "Download Kibana's deb"
      get_url:
        url: "https://artifacts.elastic.co/downloads/kibana/kibana-{{ elk_stack_version }}-amd64.deb"
        dest: "/tmp/kibana-{{ elk_stack_version }}-amd64.deb"
      register: download_kibana
      until: download_kibana is succeeded
    - name: Install Kibana
      become: true
      apt:
        name: "/tmp/kibana-{{ elk_stack_version }}-amd64.deb"
        state: present
    - name: Configure Kibana
      become: true
      template:
        src: kibana.yml.j2
        dest: /etc/kibana/kibana.yml
		mode: '0755'
      notify: restart Kibana
